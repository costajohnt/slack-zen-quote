{
  "compilerOptions": {
    "outDir": "./.build/",
    "sourceMap": true,
    "module": "commonjs",
    "target": "es2020",
    "allowJs": true,
    "forceConsistentCasingInFileNames": true,
    "noImplicitReturns": true,
    "strict": true,
    "suppressImplicitAnyIndexErrors": true,
    "noUnusedLocals": true,
    "experimentalDecorators": true,
    "skipLibCheck": true,
    "downlevelIteration": true,
    "lib": ["es2020"],
    "esModuleInterop": true
  },
  "include": ["./src/"]
}
